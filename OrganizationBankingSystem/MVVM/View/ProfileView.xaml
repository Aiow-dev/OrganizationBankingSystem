<UserControl
    x:Class="OrganizationBankingSystem.MVVM.View.ProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OrganizationBankingSystem.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:ProfileView}"
    mc:Ignorable="d">
    <Grid Width="Auto" Margin="10,0,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            x:Name="UserText"
            Margin="10,0,0,0"
            VerticalAlignment="Top"
            FontSize="20"
            Foreground="#FFF8F8F8" />
        <Border
            Margin="10,40,10,15"
            Background="#FF282828"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <StackPanel Margin="10">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="15"
                        Foreground="#FFF8F8F8"
                        Text="Информация об учетной записи" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Width="95"
                            VerticalAlignment="Center"
                            Foreground="#FFF8F8F8"
                            Text="Фамилия" />
                        <TextBox
                            x:Name="LastNameText"
                            Width="185"
                            Height="35"
                            Margin="10,0,0,0"
                            Padding="3,0,0,3"
                            IsReadOnly="True"
                            Style="{StaticResource TextBoxTheme}" />
                    </StackPanel>
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                        <TextBlock
                            Width="95"
                            VerticalAlignment="Center"
                            Foreground="#FFF8F8F8"
                            Text="Имя" />
                        <TextBox
                            x:Name="FirstNameText"
                            Width="185"
                            Height="35"
                            Margin="10,0,0,0"
                            Padding="3,0,0,3"
                            IsReadOnly="True"
                            Style="{StaticResource TextBoxTheme}" />
                    </StackPanel>
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                        <TextBlock
                            Width="95"
                            VerticalAlignment="Center"
                            Foreground="#FFF8F8F8"
                            Text="Отчество" />
                        <TextBox
                            x:Name="PatronymicText"
                            Width="185"
                            Height="35"
                            Margin="10,0,0,0"
                            Padding="3,0,0,3"
                            IsReadOnly="True"
                            Style="{StaticResource TextBoxTheme}" />
                    </StackPanel>
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                        <TextBlock
                            Width="95"
                            VerticalAlignment="Center"
                            Foreground="#FFF8F8F8"
                            Text="Номер телефона" />
                        <TextBox
                            x:Name="PhoneText"
                            Width="185"
                            Height="35"
                            Margin="10,0,0,0"
                            Padding="3,0,0,3"
                            IsReadOnly="True"
                            Style="{StaticResource TextBoxTheme}" />
                        <Button
                            x:Name="ButtonChangePhoneForm"
                            Width="120"
                            Margin="10,0,0,0"
                            BorderThickness="0,0,0,0"
                            Click="ShowChangePhoneForm"
                            Content="Изменить"
                            Foreground="#FFF8F8F8"
                            Style="{StaticResource ButtonSubmitTheme}" />
                    </StackPanel>
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                        <TextBlock
                            Width="95"
                            VerticalAlignment="Center"
                            Foreground="#FFF8F8F8"
                            Text="Логин" />
                        <TextBox
                            x:Name="LoginText"
                            Width="185"
                            Height="35"
                            Margin="10,0,0,0"
                            Padding="3,0,0,3"
                            IsReadOnly="True"
                            Style="{StaticResource TextBoxTheme}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="10">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="15"
                        Foreground="#FFF8F8F8"
                        Text="Действия с учетной записью" />
                    <StackPanel Orientation="Horizontal">
                        <Button
                            x:Name="ButtonChangePasswordForm"
                            Width="150"
                            Height="35"
                            Margin="0,0,0,0"
                            BorderThickness="0,0,0,0"
                            Click="ShowChangePasswordForm"
                            Content="Изменить пароль"
                            Foreground="#FFF8F8F8"
                            Style="{StaticResource ButtonSubmitTheme}" />
                        <Button
                            x:Name="ButtonDeleteAccount"
                            Width="180"
                            Margin="10,0,0,0"
                            BorderThickness="0,0,0,0"
                            Click="ShowDeleteAccountForm"
                            Content="Удалить учетную запись"
                            Foreground="#FFF8F8F8"
                            Style="{StaticResource ButtonImportantWarningTheme}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
