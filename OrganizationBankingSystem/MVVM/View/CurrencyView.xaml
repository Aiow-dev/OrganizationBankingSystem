<UserControl x:Class="OrganizationBankingSystem.MVVM.View.CurrencyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrganizationBankingSystem.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="542.764" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Обзор валют"
                   Foreground="#FFF8F8F8"
                   FontSize="20"
                   Margin="10 0 0 20"/>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Border Width="400"
                    Height="225"
                    CornerRadius="8"
                    Background="#FF282828">
                <Border.Clip>
                    <RectangleGeometry Rect="0, 0, 400, 225">
                    </RectangleGeometry>
                </Border.Clip>
                <Grid>
                    <StackPanel Margin="10 0 0 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="195"/>
                            </Grid.RowDefinitions>
                            <TextBlock Foreground="#FFF8F8F8" Text="График валюты"/>
                            <TextBlock Grid.Row="1" Foreground="#FFF8F8F8" Text="Нет данных для построения графика. Требуются выбранные валюты" VerticalAlignment="Top" Margin="0,81,0,0"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
            <Border Width="370"
                    Height="225"
                    CornerRadius="8"
                    Background="#FF282828"
                    Margin="10 0 0 0">
                <Border.Clip>
                    <RectangleGeometry Rect="0, 0, 400, 225">
                    </RectangleGeometry>
                </Border.Clip>
                <Grid>
                    <StackPanel Margin="10 0 0 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="195"/>
                            </Grid.RowDefinitions>
                            <TextBlock Foreground="#FFF8F8F8" Text="Конвертер валют"/>
                            <StackPanel Grid.Row="1">
                                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                    <TextBox Width="165"/>
                                    <ComboBox x:Name="comboBoxFromCurrency" Width="165" Height="35"
                                              Background="#FF282828"
                                              Margin="20 0 0 0" IsEditable="True" ToolTip="Исходная валюта">
                                        <ComboBoxItem Content="USD"/>
                                        <ComboBoxItem Content="EUR"/>
                                        <ComboBoxItem Content="JPY"/>
                                        <ComboBoxItem Content="CAD"/>
                                        <ComboBoxItem Content="CZK"/>
                                        <ComboBoxItem Content="RUB"/>
                                        <ComboBoxItem Content="SEK"/>
                                        <ComboBoxItem Content="DKK"/>
                                        <ComboBoxItem Content="NOK"/>
                                        <ComboBoxItem Content="PLN"/>
                                        <ComboBoxItem Content="UAH"/>
                                        <ComboBoxItem Content="BTC"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                    <TextBox Width="165"/>
                                    <ComboBox x:Name="comboBoxToCurrency" Width="165" Height="35"
                                              Background="#FF282828"
                                              Margin="20 0 0 0" IsEditable="True" ToolTip="Конечная валюта">
                                        <ComboBoxItem Content="USD"/>
                                        <ComboBoxItem Content="EUR"/>
                                        <ComboBoxItem Content="JPY"/>
                                        <ComboBoxItem Content="CAD"/>
                                        <ComboBoxItem Content="CZK"/>
                                        <ComboBoxItem Content="RUB"/>
                                        <ComboBoxItem Content="SEK"/>
                                        <ComboBoxItem Content="DKK"/>
                                        <ComboBoxItem Content="NOK"/>
                                        <ComboBoxItem Content="PLN"/>
                                        <ComboBoxItem Content="UAH"/>
                                        <ComboBoxItem Content="BTC"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                    <Button Background="#FF1A1919" Foreground="#FFF8F8F8" Content="Получить значение" Width="165" Height="35" Click="Button_Click" BorderThickness="0,0,0,0"/>
                                    <TextBox x:Name="textBlockValueExchangeRates" Background="#FF1A1919" Foreground="#FFF8F8F8" Width="165" Height="76" TextWrapping="WrapWithOverflow" Margin="20 0 0 0" BorderThickness="0,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </StackPanel>
</UserControl>
