<Window
    x:Class="OrganizationBankingSystem.MVVM.View.Dialogs.QuestionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OrganizationBankingSystem.MVVM.View.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="500"
    Height="380"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="/Assets/Images/bank_logo.png"
    MouseLeftButtonDown="WindowMouseLeftButtonDown"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="#F21A1919" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border
                Width="12"
                Height="12"
                Margin="0,-5,20,0"
                HorizontalAlignment="Right"
                Background="#FFF8F8F8"
                CornerRadius="10"
                MouseLeftButtonDown="CloseWindow">
                <TextBlock
                    Margin="0,1,0,-1"
                    HorizontalAlignment="Center"
                    FontSize="7"
                    Foreground="#FF282828"
                    Style="{StaticResource TextBlockHideAnimationTheme}"
                    Text="❌" />
            </Border>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="QuestionText"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    FontSize="15"
                    Foreground="#FFF8F8F8" />
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <StackPanel Width="300" Orientation="Horizontal">
                        <Button
                            x:Name="ButtonConfirm"
                            Width="120"
                            Height="35"
                            BorderThickness="0,0,0,0"
                            Click="ClickConfirm"
                            Content="Подтвердить"
                            Foreground="#FFF8F8F8"
                            Style="{StaticResource ButtonSubmitTheme}" />
                        <Button
                            x:Name="ButtonCancel"
                            Width="120"
                            Height="35"
                            Margin="60,0,0,0"
                            BorderThickness="0,0,0,0"
                            Click="ClickCancel"
                            Content="Отмена"
                            Foreground="#FFF8F8F8"
                            Style="{StaticResource ButtonTheme}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
