<Window
    x:Class="OrganizationBankingSystem.MVVM.View.Dialogs.ChangePhoneNumberDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OrganizationBankingSystem.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Изменение номера телефона"
    Width="500"
    Height="380"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="/Assets/Images/bank_logo.png"
    MouseLeftButtonDown="WindowMouseLeftButtonDown"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="#F21A1919" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border
                Width="12"
                Height="12"
                Margin="0,-5,20,0"
                HorizontalAlignment="Right"
                Background="#FFF8F8F8"
                CornerRadius="10"
                MouseLeftButtonDown="CloseWindow">
                <TextBlock
                    Margin="0,1,0,-1"
                    HorizontalAlignment="Center"
                    FontSize="7"
                    Foreground="#FF282828"
                    Style="{StaticResource TextBlockHideAnimationTheme}"
                    Text="❌" />
            </Border>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <StackPanel>
                    <TextBlock
                        Margin="0,20,0,60"
                        HorizontalAlignment="Center"
                        FontSize="15"
                        Foreground="#FFF8F8F8"
                        Text="Изменение номера телефона" />
                    <Grid>
                        <TextBox
                            x:Name="NewPhoneNumber"
                            Width="220"
                            Height="35"
                            Padding="3,0,0,3"
                            Style="{StaticResource TextBoxTheme}" />
                        <TextBlock
                            Width="220"
                            Padding="5,0,0,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="DarkGray"
                            IsHitTestVisible="False"
                            Text="Введите новый номер телефона">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Style.Setters>
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </Style.Setters>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=Text, ElementName=NewPhoneNumber}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </StackPanel>
                <Button
                    x:Name="ButtonChangePhone"
                    Grid.Row="1"
                    Width="120"
                    Height="35"
                    BorderThickness="0,0,0,0"
                    Click="ChangePhone"
                    Content="Подтвердить"
                    Foreground="#FFF8F8F8"
                    Style="{StaticResource ButtonSubmitTheme}" />
            </Grid>
        </Grid>
    </Border>
</Window>
