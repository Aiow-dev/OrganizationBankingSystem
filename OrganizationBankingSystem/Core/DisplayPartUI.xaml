<core:NotificationDisplayPart
    x:Class="OrganizationBankingSystem.Core.DisplayPartUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:ToastNotifications.Core;assembly=ToastNotifications"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OrganizationBankingSystem.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:NotificationWarn,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="60"
    d:DesignWidth="250"
    mc:Ignorable="d">
    <Grid>
        <Border Background="#FFFFF1D0" CornerRadius="8">
            <TextBlock
                Margin="10"
                Foreground="#FF282828"
                Text="{Binding Message}"
                TextWrapping="Wrap" />
        </Border>
    </Grid>
</core:NotificationDisplayPart>
