            <StackPanel x:Name="stackPanelMenu" Grid.Row="1" HorizontalAlignment="Left" Margin="10 0 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock HorizontalAlignment="Center" Text="📈" FontSize="18" Foreground="#FFF8F8F8" Margin="0 0 0 15"/>
                        <TextBlock HorizontalAlignment="Center" Text="B" FontSize="18" Foreground="#FFF8F8F8" Margin="0 0 0 15"/>
                        <TextBlock HorizontalAlignment="Center" Text="⇌" FontSize="18" Foreground="#FFF8F8F8" Margin="0 0 0 15"/>
                        <TextBlock HorizontalAlignment="Center" Text="💰" FontSize="18" Foreground="#FFF8F8F8" Margin="0 0 0 15"/>
                        <TextBlock HorizontalAlignment="Center" Text="⅍" FontSize="18" Foreground="#FFF8F8F8" Margin="0 0 0 15"/>
                        <TextBlock HorizontalAlignment="Center" Text="%" FontSize="18" Foreground="#FFF8F8F8" Margin="0 0 0 15"/>
                        <TextBlock HorizontalAlignment="Center" Text="$" FontSize="18" Foreground="#FFF8F8F8" Margin="0 0 0 15"/>
                        <TextBlock HorizontalAlignment="Center" Text="⚙" FontSize="18" Foreground="#FFF8F8F8" Margin="0 0 0 15"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <RadioButton Content="Главная"
                             Foreground="#FFF8F8F8"
                             FontSize="18"
                             Margin="5 0 0 15"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding DashboardViewCommand}"/>
                        <RadioButton Content="Счет"
                             Foreground="#FFF8F8F8"
                             FontSize="18"
                             Margin="5 0 0 15"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding BankAccountViewCommand}"/>
                        <RadioButton Content="Переводы"
                             Foreground="#FFF8F8F8"
                             FontSize="18"
                             Margin="5 0 0 15"
                             Style="{StaticResource MenuButtonTheme}"/>
                        <RadioButton Content="Вклады"
                             Foreground="#FFF8F8F8"
                             FontSize="18"
                             Margin="5 0 0 15"
                             Style="{StaticResource MenuButtonTheme}"/>
                        <RadioButton Content="Акции"
                             Foreground="#FFF8F8F8"
                             FontSize="18"
                             Margin="5 0 0 15"
                             Style="{StaticResource MenuButtonTheme}"/>
                        <RadioButton Content="Кредитование"
                             Foreground="#FFF8F8F8"
                             FontSize="18"
                             Margin="5 0 0 15"
                             Style="{StaticResource MenuButtonTheme}"/>
                        <RadioButton Content="Валюты"
                             Foreground="#FFF8F8F8"
                             FontSize="18"
                             Margin="5 0 0 15"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding CurrencyViewCommand}"/>
                        <RadioButton Content="Настройки"
                             Foreground="#FFF8F8F8"
                             FontSize="18"
                             Margin="5 0 0 15"
                             Style="{StaticResource MenuButtonTheme}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <Border Grid.Column="1" Grid.RowSpan="2" Width="827" Background="#FF1A1919" CornerRadius="0,8,8,0"></Border>
            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Content="{Binding CurrentView}"
                            x:Name="contentControl"
                            Width="850"
                            Margin="10 0 0 0"/>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Width="840">
                        <StackPanel x:Name="stackPanelWindowButtons" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 5 20 0" Height="12">
                            <Border Background="#FFF8F8F8" HorizontalAlignment="Left" CornerRadius="10" Width="12" Height="12">
                                <TextBlock Text="❌" HorizontalAlignment="Center" Foreground="#FF282828" FontSize="7" Margin="0,1,0,-1"/>
                            </Border>
                            <Border Background="#FFF8F8F8" HorizontalAlignment="Left" CornerRadius="10" Width="12" Height="12" Margin="7 0 0 0">
                                <TextBlock Text="➖" HorizontalAlignment="Center" Foreground="#FF282828" FontSize="7" Margin="0,1,0,-1"/>
                            </Border>
                            <Border Background="#FFF8F8F8" HorizontalAlignment="Left" CornerRadius="10" Width="12" Height="12" Margin="7 0 0 0">
                                <TextBlock Text="🡼" HorizontalAlignment="Center" Foreground="#FF282828" FontSize="8"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <!--<Border Grid.ColumnSpan="2" Background="#FF222222" Height="1" Margin="12,30,32,34"/>-->
    </Border>
