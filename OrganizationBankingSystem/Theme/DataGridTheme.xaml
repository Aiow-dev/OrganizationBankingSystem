<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DataGridTheme" TargetType="{x:Type DataGrid}">
        <Setter Property="HeadersVisibility" Value="Column" />
        <Setter Property="HorizontalGridLinesBrush">
            <Setter.Value>
                <SolidColorBrush Color="Gray" />
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalGridLinesBrush">
            <Setter.Value>
                <SolidColorBrush Color="Gray" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DataGridColumnHeaderTheme" TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="#FF282828" />
        <Setter Property="Foreground" Value="#FFF8F8F8" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="Gray" />
    </Style>
    <Style x:Key="DataGridRowTheme" TargetType="{x:Type DataGridRow}">
        <Setter Property="Background" Value="#FF323232" />
        <Setter Property="Foreground" Value="#FFF8F8F8" />
    </Style>
</ResourceDictionary>